@model  DessertShop.API.ViewModels.HomeViewModel

    <div><h2>@Model.Title</h2></div>

        @foreach (var dessert in Model.Desserts)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img src="@dessert.ImageThumbNailUrl" alt="">
                    <div class="caption">
                        <h3 class="pull-right">@dessert.Price.ToString("c")</h3>
                        <h3>
                            @dessert.Name
                        </h3>
                        <p>@dessert.ShortDescription</p>
                    </div>
                </div>
            </div>
        }
